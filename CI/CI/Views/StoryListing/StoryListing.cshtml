@{
    Layout = "_navbar";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/Storypage.css" asp-append-version="true" />
</head>
<body>
    <div class="container storylistingcontainer mx-0 p-0">

        <div class="row storyheader  position-relative m-0">
           <div class="  position-absolute top-50 start-50 translate-middle text-center">

                <p style="width:75vw; " class="ms-auto me-auto mb-3">
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Suscipit, fugiat deleniti! Aut nam incidunt vel nisi, placeat reiciendis, eos vitae accusantium a quasi tempora maiores voluptatem, voluptas optio deleniti veritatis.
                </p>
                <a class=" storyheaderbtn rounded-5 p-1 px-4  " asp-action="ShareStory" asp-controller="Home"  >
                    Share your Story
                    <i class="bi bi-arrow-right  "></i>
                </a>

            </div>

        </div>

       
    </div>
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                @foreach(var story in Model)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="img-event">

                                <img class="card-img-top storyimg"
                                     src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-1.png" alt="Card image cap">
                                <div class="ABC position-absolute top-0 start-0" style="height:100%; width:100%;">StoryId
                                    <a class="btn-view  rounded-5 p-1 px-4 position-absolute top-50 start-50 translate-middle" href="/StoryListing/StoryDetail/@ViewBag.UserId?StoryId=@story.StoryId">
                                        View Details
                                        <i class="bi bi-arrow-right  "></i>

                                    </a>
                                </div>
                                <button class="theme-btn position-absolute top-100 start-50 translate-middle ">Environment</button>
                            </div>
                            <div class="card-body">
                                <div class=" col-12">
                                    <h5 class="card-title demo-1  mt-3">@story.StoryTitle</h5>
                                    <p class="card-text demo-2">
                                        @story.ShortDescription
                                    </p>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                 
                                    <div class="d-flex me-auto mt-2 align-items-center ">
                                        <img src="~/images/volunteer1.png" class="storyuserphoto" />
                                        <lable class="ms-2" id="">@story.username &nbsp;@story.lastname</lable>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
               

                
                </div>
            <nav aria-label="Page navigation example" class="d-flex justify-content-center">
                <ul class="pagination">
                    @if (@ViewBag.currentUrl.Contains('?'))
                    {
                        <li class="page-item @(ViewBag.CurrentPage == 0 ? "disabled" : "")">
                            <a class="page-link" href="@ViewBag.currentUrl&pageIndex=@(ViewBag.CurrentPage - 1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for (int i = 0; i < ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl&pageIndex=@i">@((i + 1).ToString())</a>
                            </li>
                        }
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages - 1 ? "disabled" : "")">
                            <a class="page-link" href="@ViewBag.currentUrl&pageIndex=@(ViewBag.CurrentPage + 1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item @(ViewBag.CurrentPage == 0 ? "disabled" : "")">
                            <a class="page-link" href="@ViewBag.currentUrl?pageIndex=@(ViewBag.CurrentPage - 1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for (int i = 0; i < ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@ViewBag.currentUrl?pageIndex=@i">@((i + 1).ToString())</a>
                            </li>
                        }
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages - 1 ? "disabled" : "")">
                            <a class="page-link" href="@ViewBag.currentUrl?pageIndex=@(ViewBag.CurrentPage + 1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
          
            </div>
        </div>
   
    

</body>
</html>

